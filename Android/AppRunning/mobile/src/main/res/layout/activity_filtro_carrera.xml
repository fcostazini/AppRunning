<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="studios.thinkup.com.apprunning.FiltroCarreraActivity">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView3"
        android:layout_marginBottom="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/lbl_ordenamiento"
                android:id="@+id/lbl_ordenamiento"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:layout_marginTop="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/imageView2"
                android:layout_below="@+id/lbl_ordenamiento"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="#000000"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="-5dp"
                android:layout_marginLeft="-5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="@string/lbl_campo"
                android:id="@+id/lbl_campo"
                android:layout_below="@+id/imageView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="5dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:id="@+id/campo_click"
                android:layout_toRightOf="@id/lbl_campo"
                android:layout_toEndOf="@id/lbl_campo"
                android:layout_alignBottom="@id/lbl_campo"
                android:layout_alignTop="@id/lbl_campo">

                <studios.thinkup.com.apprunning.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="18sp"
                    android:text="@string/icon_edit"
                    android:id="@+id/icon_next_campo"
                    android:typeface="monospace"
                    android:textColor="@color/link_text_material_light"
                    android:gravity="center_vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/txt_campo"
                    android:layout_alignTop="@+id/txt_campo"
                    android:layout_marginLeft="10dp">

                </studios.thinkup.com.apprunning.IconTextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="Ninguno"
                    android:id="@+id/txt_campo"
                    android:padding="5dp"
                    android:layout_toLeftOf="@id/icon_next_campo"
                    android:layout_toStartOf="@id/icon_next_campo"
                    android:textColor="@color/link_text_material_light"
                    />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/imageView3"
                android:layout_below="@+id/campo_click"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="#33000000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="-20dp"
                android:layout_marginLeft="-20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="@string/lbl_forma"
                android:id="@+id/lbl_sentido"
                android:padding="5dp"
                android:layout_below="@+id/imageView3"
                android:layout_alignLeft="@+id/lbl_campo"
                android:layout_alignStart="@+id/lbl_campo"
                android:layout_alignParentLeft="true" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:id="@+id/sentido_click"
                android:layout_toRightOf="@id/lbl_sentido"
                android:layout_toEndOf="@id/lbl_sentido"
                android:layout_alignBottom="@id/lbl_sentido"
                android:layout_alignTop="@id/lbl_sentido">

                <studios.thinkup.com.apprunning.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="18sp"
                    android:text="@string/icon_edit"
                    android:id="@+id/icon_next_sentido"
                    android:typeface="monospace"
                    android:textColor="@color/link_text_material_light"
                    android:gravity="center_vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp">

                </studios.thinkup.com.apprunning.IconTextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="Ascendente"
                    android:id="@+id/txt_sentido"
                    android:padding="5dp"
                    android:layout_toLeftOf="@id/icon_next_sentido"
                    android:layout_toStartOf="@id/icon_next_sentido"
                    android:textColor="@color/link_text_material_light"
                    />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/imageView4"
                android:background="#33000000"
                android:layout_below="@+id/sentido_click"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/lbl_filtros_disponibles"
                android:id="@+id/lbl_filtros"
                android:textStyle="bold"
                android:layout_below="@+id/imageView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/imageView5"
                android:layout_below="@+id/lbl_filtros"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="#000000"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="-5dp"
                android:layout_marginLeft="-5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="@string/lbl_modalidad"
                android:id="@+id/lbl_modalidad"
                android:padding="5dp"
                android:layout_below="@+id/imageView5"
                android:layout_alignLeft="@+id/lbl_campo"
                android:layout_alignStart="@+id/lbl_campo"
                android:layout_alignParentLeft="true" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:id="@+id/modalidad_click"
                android:layout_toRightOf="@id/lbl_modalidad"
                android:layout_toEndOf="@id/lbl_modalidad"
                android:layout_alignBottom="@id/lbl_modalidad"
                android:layout_alignTop="@id/lbl_modalidad">

                <studios.thinkup.com.apprunning.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="18sp"
                    android:text="@string/icon_edit"
                    android:id="@+id/icon_next_modalidad"
                    android:typeface="monospace"
                    android:textColor="@color/link_text_material_light"
                    android:gravity="center_vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp">

                </studios.thinkup.com.apprunning.IconTextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="Todas"
                    android:id="@+id/txt_modalidad"
                    android:padding="5dp"
                    android:layout_toLeftOf="@id/icon_next_modalidad"
                    android:layout_toStartOf="@id/icon_next_modalidad"
                    android:textColor="@color/link_text_material_light"
                    />
            </RelativeLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/imageView6"
                android:background="#33000000"
                android:layout_below="@+id/modalidad_click"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="@string/lbl_provincia"
                android:id="@+id/lbl_provincia"
                android:padding="5dp"
                android:layout_below="@+id/imageView6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:id="@+id/provincia_click"
                android:layout_toRightOf="@id/lbl_provincia"
                android:layout_toEndOf="@id/lbl_provincia"
                android:layout_alignBottom="@id/lbl_provincia"
                android:layout_alignTop="@id/lbl_provincia">

                <studios.thinkup.com.apprunning.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="18sp"
                    android:text="@string/icon_edit"
                    android:id="@+id/icon_next_provincia"
                    android:typeface="monospace"
                    android:textColor="@color/link_text_material_light"
                    android:gravity="center_vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp">

                </studios.thinkup.com.apprunning.IconTextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="Todas"
                    android:id="@+id/txt_provincia"
                    android:padding="5dp"
                    android:layout_toLeftOf="@id/icon_next_provincia"
                    android:layout_toStartOf="@id/icon_next_provincia"
                    android:textColor="@color/link_text_material_light"
                    />
            </RelativeLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/imageView7"
                android:background="#33000000"
                android:layout_below="@+id/provincia_click"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView7"
                android:id="@+id/ly_ciudad"
                android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="@string/lbl_ciudad"
                android:id="@+id/lbl_ciudad"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/ciudad_click"
                    android:layout_toRightOf="@id/lbl_ciudad"
                    android:layout_toEndOf="@id/lbl_ciudad"
                    android:layout_alignBottom="@id/lbl_ciudad"
                    android:layout_alignTop="@id/lbl_ciudad">

                    <studios.thinkup.com.apprunning.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="18sp"
                        android:text="@string/icon_edit"
                        android:id="@+id/icon_next_ciudad"
                        android:typeface="monospace"
                        android:textColor="@color/link_text_material_light"
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp">

                    </studios.thinkup.com.apprunning.IconTextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:text="Ninguno"
                        android:id="@+id/txt_ciudad"
                        android:padding="5dp"
                        android:layout_toLeftOf="@id/icon_next_ciudad"
                        android:layout_toStartOf="@id/icon_next_ciudad"
                        android:textColor="@color/link_text_material_light"
                        />
                </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/imageView8"
                android:background="#33000000"
                android:layout_below="@+id/lbl_ciudad"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="@string/distancia"
                android:id="@+id/lbl_distancia"
                android:padding="5dp"
                android:layout_below="@id/ly_ciudad"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:id="@+id/distancia_clickable"
                android:layout_toRightOf="@id/lbl_distancia"
                android:layout_toEndOf="@id/lbl_distancia"
                android:layout_alignBottom="@id/lbl_distancia"
                android:layout_alignTop="@id/lbl_distancia">

            <studios.thinkup.com.apprunning.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="18sp"
                android:text="@string/icon_edit"
                android:id="@+id/icon_next_distancia"
                android:typeface="monospace"
                android:textColor="@color/link_text_material_light"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/txt_distancia"
                android:layout_alignTop="@+id/txt_distancia"
                android:layout_marginLeft="10dp">

            </studios.thinkup.com.apprunning.IconTextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="0 a 100 Km "
                android:id="@+id/txt_distancia"
                android:padding="5dp"
                android:layout_toLeftOf="@id/icon_next_distancia"
                android:layout_toStartOf="@id/icon_next_distancia"
                android:textColor="@color/link_text_material_light"
                />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/imageView9"
                android:background="#33000000"
                android:layout_below="@+id/lbl_distancia"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="@string/lbl_rango_de_fechas"
                android:id="@+id/lbl_fechas"
                android:padding="5dp"
                android:layout_below="@id/imageView9"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="visible" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:id="@+id/fechas_clickable"
                android:layout_toRightOf="@id/lbl_fechas"
                android:layout_toEndOf="@id/lbl_fechas"
                android:layout_alignBottom="@id/lbl_fechas"
                android:layout_alignTop="@id/lbl_fechas"
                android:visibility="visible">

                <studios.thinkup.com.apprunning.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="18sp"
                    android:text="@string/icon_edit"
                    android:id="@+id/icon_next_fecha"
                    android:typeface="monospace"
                    android:textColor="@color/link_text_material_light"
                    android:gravity="center_vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/txt_fecha"
                    android:layout_alignTop="@+id/txt_fecha"
                    android:layout_marginLeft="10dp">

                </studios.thinkup.com.apprunning.IconTextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="01/01/15 a 02/03/15 "
                    android:id="@+id/txt_fechas"
                    android:padding="5dp"
                    android:layout_toLeftOf="@id/icon_next_fecha"
                    android:layout_toStartOf="@id/icon_next_fecha"
                    android:textColor="@color/link_text_material_light"
                    />
            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_filtrar"
        android:id="@+id/btn_filtrar"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_margin="10dp" />
</RelativeLayout>



<ListView
    android:id="@+id/left_drawer"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:choiceMode="singleChoice"
    android:divider="@color/drawer_divider"
    android:dividerHeight="@dimen/divider_drawer_height"
    android:background="@color/drawer_background" />
</android.support.v4.widget.DrawerLayout>