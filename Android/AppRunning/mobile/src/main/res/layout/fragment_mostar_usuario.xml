<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="studios.thinkup.com.apprunning.NuevoUsuario">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_marginBottom="5dp">

        <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_width="@dimen/com_facebook_profilepictureview_preset_size_normal"
            android:layout_height="@dimen/com_facebook_profilepictureview_preset_size_normal"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            android:background="@drawable/profile_back"
            android:id="@+id/img_profile" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_nick"
            android:layout_alignTop="@+id/img_profile"
            android:layout_toRightOf="@+id/img_profile"
            android:layout_toEndOf="@+id/img_profile"
            android:layout_alignBottom="@+id/img_profile"
            android:hint="Nombre de Usuario"
            android:layout_marginLeft="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_nombre"
            android:layout_below="@+id/img_profile"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:hint="No Informado"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_toRightOf="@+id/lbl_nombre"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="5"
                android:id="@+id/lbl_nombre"
                android:hint="No Informado"
                android:padding="10dp"
                android:text="Nombre:"
                android:layout_below="@+id/img_profile"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/txt_apellido"
                android:layout_below="@+id/lbl_nombre"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="true"
                android:hint="@string/no_informado"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:layout_toRightOf="@+id/lbl_apellido"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:id="@+id/lbl_apellido"
                android:padding="10dp"
                android:text="Apellido:"
                android:layout_below="@+id/lbl_nombre"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/txt_grupo"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="true"
                android:hint="@string/no_informado"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:layout_toRightOf="@+id/lbl_grupo"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:layout_below="@+id/lbl_apellido" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:id="@+id/lbl_grupo"
                android:padding="10dp"
                android:text="Grupo:"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold"
                android:layout_below="@+id/lbl_apellido" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
