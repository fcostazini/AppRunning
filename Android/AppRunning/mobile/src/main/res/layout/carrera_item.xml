<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/btn_carrera_item">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/ll_opciones_carrera"
    android:gravity="right"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:padding="1dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="2dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:id="@+id/img_favorito"
        android:src="@drawable/ic_me_gusta"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:id="@+id/img_corrida"
        android:src="@drawable/ic_corrida"
        android:layout_gravity="center"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:id="@+id/img_anotado_carrera"

        android:src="@drawable/ic_anotado"
        android:layout_gravity="center"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />

</LinearLayout>
    <ImageView
        android:layout_width="@dimen/logoSize"
        android:layout_height="@dimen/logoSize"
        android:id="@+id/img_logo_carrera"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/txt_fecha"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nombre de Carrera"
        android:id="@+id/txt_nombre_carrera"
        android:layout_below="@+id/ll_opciones_carrera"
        android:layout_toRightOf="@+id/img_logo_carrera"
        android:layout_toEndOf="@+id/img_logo_carrera"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50 Km"
        android:id="@+id/txt_distancia"
        android:layout_below="@+id/txt_nombre_carrera"
        android:layout_toRightOf="@+id/img_logo_carrera"
        android:layout_toEndOf="@+id/img_logo_carrera"
        android:textSize="@dimen/carrera_datos_size"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28/06/2015"
        android:id="@+id/txt_fecha"
        android:textSize="@dimen/carrera_datos_size"
        android:layout_below="@+id/txt_distancia"
        android:layout_alignLeft="@+id/txt_distancia"
        android:layout_alignStart="@+id/txt_distancia"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Una carrera para que los fans de Starwars tambiÃ©n corran y hagan un poco de ejercicio."
        android:id="@+id/txt_descripcion"
        android:layout_below="@+id/txt_fecha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/categoria_item_padding"
        android:ellipsize="end"
        android:maxLines="3" />


</RelativeLayout>