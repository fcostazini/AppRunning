<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#660011FF"
    android:id="@+id/ly_busqueda"
    android:padding="10dp">
    <EditText
        android:id="@+id/txt_dato_amigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:layout_toLeftOf="@+id/icon_modalidad"
        android:layout_toStartOf="@+id/icon_modalidad"/>
    <studios.thinkup.com.apprunning.view.IconTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:text="@string/icon_ganador"
        android:id="@+id/icon_modalidad"
        android:typeface="monospace"
        android:textColor="#0044FF"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:layout_alignBottom="@+id/txt_dato_amigo"
        android:layout_alignTop="@+id/txt_dato_amigo" />
</RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lv_resultados"

        android:layout_below="@+id/ly_busqueda"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        tools:layout="@layout/amigo_item"
        android:layout_margin="5dp" />

</RelativeLayout>