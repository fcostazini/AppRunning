<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    package="studios.thinkup.com.apprunning" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".model.RunningApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme"
        tool:replace="android:icon" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/face_key" />

        <activity
            android:name=".BusquedaCarreraActivity"
            android:label="@string/title_activity_buscar"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".TemporizadorActivity"
            android:label="@string/title_temporizador" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PreferenciasActivity"
            android:label="@string/title_activity_filtros"
            android:parentActivityName=".BusquedaCarreraActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="studios.thinkup.com.apprunning.BusquedaCarreraActivity" />
        </activity>
        <activity
            android:name=".CarrerasActivity"
            android:label="@string/title_activity_carreras"
            android:parentActivityName=".BusquedaCarreraActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="studios.thinkup.com.apprunning.BusquedaCarreraActivity" />
        </activity>
        <activity
            android:name=".RecomendadosActivity"
            android:label="@string/title_activity_carreras"
            android:parentActivityName=".BusquedaCarreraActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="studios.thinkup.com.apprunning.BusquedaCarreraActivity" />
        </activity>
        <activity
            android:name=".DetalleCarreraActivity"
            android:label="@string/title_activity_detalle_carrera"
            android:parentActivityName=".CarrerasActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="studios.thinkup.com.apprunning.CarrerasActivity" />
        </activity>
        <activity
            android:name=".MisCarrerasActivity"
            android:label="@string/title_activity_mis_datos"
            android:parentActivityName=".CarrerasActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="studios.thinkup.com.apprunning.CarrerasActivity" />
        </activity>
        <activity
            android:name=".TiemposCarrerasActivity"
            android:label="@string/title_activity_mis_tiempos"
            android:parentActivityName=".CarrerasActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="studios.thinkup.com.apprunning.CarrerasActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="your API key" />

        <activity
            android:name=".NuevoUsuario"
            android:label="@string/title_activity_nuevo_usuario"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="studios.thinkup.com.apprunning.MainActivity" />
        </activity>
        <activity
            android:name=".DatosUsuarioActivity"
            android:label="@string/title_activity_datos_usuario"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="studios.thinkup.com.apprunning.RecomendadosActivity" />
        </activity>
        <activity
            android:name=".FiltroCarreraActivity"
            android:label="@string/title_activity_filtro_carrera" >
        </activity>
    </application>

</manifest>
