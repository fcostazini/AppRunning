		<log4j.version>1.2.17</log4j.version>
		<resteasy-jaxrs.version>3.0.6.Final</resteasy-jaxrs.version>
		<resteasy-client.version>3.0.6.Final</resteasy-client.version>
		<resteasy-jaxb-provider.version>3.0.6.Final</resteasy-jaxb-provider.version>
		<resteasy-multipart-provider.version>3.0.6.Final</resteasy-multipart-provider.version>
		<commons-io.version>1.3.2</commons-io.version>
		<commons-logging.version>1.1.3</commons-logging.version>
		<log4j-apache.version>2.0-beta9</log4j-apache.version>
		<commons-lang3.version>3.2.1</commons-lang3.version>
		<commons-collections.version>3.2.1</commons-collections.version>
		<commons-codec.version>1.8</commons-codec.version>
