		<arquillian-bom.version>1.1.5.Final</arquillian-bom.version>
		<arquillian-weld-ee-embedded-1.1.version>1.0.0.CR3</arquillian-weld-ee-embedded-1.1.version>
		<arquillian-bom.version>1.1.5.Final</arquillian-bom.version>
		<weld-core.version>1.1.5.Final</weld-core.version>
		<mockito-all.version>1.9.5</mockito-all.version>
		<xnio-nio.version>3.0.0.CR7</xnio-nio.version>
		<shrinkwrap-descriptors-impl.version>0.1.7</shrinkwrap-descriptors-impl.version>
		<joda-time.version>2.5</joda-time.version>
		<slf4j-simple.version>1.6.4</slf4j-simple.version>
